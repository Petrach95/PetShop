<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>

		<!-- Set URL -->
		<property name = "hibernate.connection.url">jdbc:mysql://localhost:3306/petshopapp</property>

		<!-- Set User Name -->
		<property name = "hibernate.connection.username">root</property>

		<!-- Set Password -->
		<property name = "hibernate.connection.password">betacom1</property>

		<!-- Set Driver Name -->
		<property name = "hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>

		<property name = "hibernate.show_sql">true</property>
		
		<property name = "hbm2ddl.auto">update</property>
		
		<!-- per creare e droppare le tabelle -->
		<!-- <property name = "hbm2ddl.auto">create-drop</property> -->
		
		<property name = "connection.pool_size">3</property>
		
		<mapping class = "it.betacom.model.Utente"></mapping>
		<mapping class = "it.betacom.model.Cliente"></mapping>
		<mapping class = "it.betacom.model.Animale"></mapping>
	
	</session-factory>
</hibernate-configuration>